@model IEnumerable<WebAnime.Models.ViewModel.Client.BlogLitteViewModel>
@{
    ViewBag.Title = "Index";
    int length = Model.Count();
}
<div class="row">
    @if (Model.Any())
    {
        for (int i = 0; i < length; i += 3)
        {
            var item = Model.ElementAt(i);
            var nextItem1 = i + 1 < length ? Model.ElementAt(i + 1) : null;
            var nextItem2 = i + 2 < length ? Model.ElementAt(i + 2) : null;

            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="blog__item set-bg" data-setbg="@item.ImageUrl">
                            <div class="blog__item__text">
                                <p><span class="icon_calendar"></span> @item.CreatedDate.ToString("dd/MM/yyyy - HH:mm:ss")</p>
                                <h4><a href="@Url.Action("Detail","Blog",new{@id = item.Id})" class="txtTitle">@item.Title</a></h4>
                            </div>
                        </div>
                    </div>
                    @if (nextItem1 != null)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item small__item set-bg" data-setbg="@nextItem1.ImageUrl">
                                <div class="blog__item__text">
                                    <p><span class="icon_calendar"></span> @nextItem1.CreatedDate.ToString("dd/MM/yyyy - HH:mm:ss")</p>
                                    <h5><a href="@Url.Action("Detail","Blog",new{@id=nextItem1.Id})" class="txtTitle">@nextItem1.Title</a></h5>
                                </div>
                            </div>
                        </div>
                    }
                    @if (nextItem2 != null)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item small__item set-bg" data-setbg="@nextItem2.ImageUrl">
                                <div class="blog__item__text">
                                    <p><span class="icon_calendar"></span> @nextItem2.CreatedDate.ToString("dd/MM/yyyy - HH:mm:ss")</p>
                                    <h5><a href="@Url.Action("Detail","Blog",new {id=nextItem2.Id})" class="txtTitle">@nextItem2.Title</a></h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }

    else
    {
        <h2>Chưa có bài viết nào</h2>
    }


</div>
@section footerCss
{
    <style>
        .txtTitle {
            text-shadow: 0 0 3px red; /* Kích thước và màu của viền chữ */
        }
    </style>
}

